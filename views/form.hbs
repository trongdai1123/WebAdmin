<!DOCTYPE html>
 <html lang="en"> 
        
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="box">
                                <header>
                                    <div class="icons"><i class="icon-th-large"></i></div>
                                    <h5>FORM</h5>
                                  

                                </header>
                                <div id="collapseOne" class="accordion-body collapse in body">
                                    <form action="#" class="form-horizontal" id="block-validate" method="post" action = "/san-pham/them-moi"
                                    enctype="multipart/form-data">

                                        <div class="form-group">
                                            <label class="control-label col-lg-4" for="name">Name</label>
                                            <div class="col-lg-4">
                                                <input  type="text" id="name" name="name" class="form-control" placeholder="Name" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-lg-4" for="price">Price</label>
                                            <div class="col-lg-4">
                                                <input type="text" id="price" name="price" class="form-control" placeholder="Price" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-lg-4" for="quantity">Quantity</label>
                                            <div class="col-lg-4">
                                                <input type="text" id="quantity" name="quantity" class="form-control" placeholder="Quantity" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-lg-4" for="category">Category</label>
                                               <select class="col-lg-4" id="category" name="category">
                                                {{#each categories}}
                                                <option value="{{this._id}}">{{this.name}}</option>
                                                {{/each}}
                                               </select>
                                            

                                        </div>
                                        
                                        <div class="form-group">
                                            <label class="control-label col-lg-4">File Upload</label>

                                            <div class="col-lg-4">
                                                <input type="file" id="image-file" name="image" class="form-control" onchange="onChangFile()" />
                                                    <input type="hidden" name="image" id="image" class="form-control" />
                                            </div>
                                            
                                            <div class="form-group">
                                           <img class="product-img" id="image-view" alt="Hình ảnh sản phẩm" />

                                          </div>
                                         <button type="submit" class="btn btn-primary me-2">Submit</button>
                                         <button class="btn btn-light">Cancel</button>
                                        </div>
                                        </div>
                                        

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <script>
                        const onChangFile = () => {
                           const file  = document.getElementById('image-file').files[0];
                           const reader = new FileReader();
                           reader.onload = e =>{
                                document.getElementById('image-view').src = e.target.result;
                                document.getElementById('image-view').style.display = 'block';
                           }
                           reader.readAsDataURL(file);
                        } 
                    </script>
</body>
    
</html>
